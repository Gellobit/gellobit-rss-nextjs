# ===========================================
# Gellobit RSS Processor - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ===========================================
# SUPABASE (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# CRON & SECURITY (Required)
# ===========================================
# Secret key to authenticate cron job requests
CRON_SECRET=your-secure-random-string

# Encryption key for sensitive data (32+ characters recommended)
ENCRYPTION_SECRET=your-encryption-secret-min-32-chars

# ===========================================
# SITE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SITE_URL=https://gellobit.com
NEXT_PUBLIC_APP_URL=https://gellobit.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# EMAIL (Resend)
# ===========================================
# Can also be configured via Admin Settings
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@gellobit.com
EMAIL_FROM_NAME=Gellobit
EMAIL_REPLY_TO=hello@gellobit.com

# ===========================================
# PUSH NOTIFICATIONS (VAPID)
# ===========================================
# Generate keys: npx web-push generate-vapid-keys
# Can also be configured via Admin Settings
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:hello@gellobit.com

# ===========================================
# PAYPAL (For subscriptions)
# ===========================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# ===========================================
# GOOGLE AUTHENTICATION
# ===========================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
NEXT_PUBLIC_GOOGLE_ONE_TAP_ENABLED=true

# ===========================================
# AI PROVIDERS (Optional - can be set in Admin)
# ===========================================
# AI API keys are typically stored in the database via Admin Settings
# These env vars are fallbacks if not configured in DB
# OPENAI_API_KEY=sk-xxxxxxxxxxxx
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
# DEEPSEEK_API_KEY=sk-xxxxxxxxxxxx
# GEMINI_API_KEY=xxxxxxxxxxxx
